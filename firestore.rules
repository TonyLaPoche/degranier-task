rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Règles pour les tâches
    match /tasks/{taskId} {
      // Pour le développement : permettre la lecture de toutes les tâches
      // TODO: Restreindre selon le rôle en production
      allow read: if true;

      // Pour le développement : permettre aux utilisateurs authentifiés de créer/modifier
      // TODO: Restreindre aux admins seulement en production
      allow create, update, delete: if request.auth != null;
    }

    // Règles pour les checklists
    match /taskChecklists/{checklistId} {
      // Pour le développement : permettre la lecture de toutes les checklists
      // TODO: Restreindre selon le rôle en production
      allow read: if true;

      // Écriture : utilisateurs authentifiés peuvent créer/modifier leurs checklists
      allow create, update, delete: if request.auth != null;
    }

    // Règles pour les utilisateurs
    match /users/{userId} {
      // Pour le développement : permettre la lecture de tous les utilisateurs
      // TODO: Restreindre aux utilisateurs authentifiés en production
      allow read: if true;

      // Pour le développement : permettre aux utilisateurs authentifiés de modifier
      // TODO: Restreindre selon les rôles en production
      allow create, update: if request.auth != null;

      // Suppression : utilisateurs authentifiés peuvent supprimer
      allow delete: if request.auth != null;
    }

    // Règles pour les autres collections (contact-info, social-media, etc.)
    match /{document=**} {
      // Pour le développement : permettre la lecture de toutes les données
      // TODO: Restreindre selon le rôle en production
      allow read: if true;
      allow create, update, delete: if request.auth != null;
    }
  }
}
